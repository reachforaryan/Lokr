# Database Configuration - AWS RDS PostgreSQL
DATABASE_URL=postgres://lokr_user:lokr_password@localhost:5432/lokr?sslmode=disable

# Database Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MIN_CONNS=5
DB_CONN_MAX_IDLE_TIME=5m
DB_CONN_MAX_LIFETIME=30m

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_MAX_IDLE_CONNS=20
REDIS_CONN_MAX_IDLE_TIME=30m

# Server Configuration
PORT=8080
GIN_MODE=debug

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# File Storage Configuration
STORAGE_PATH=./storage
MAX_FILE_SIZE=104857600        # 100MB in bytes
MAX_STORAGE_PER_USER=1073741824 # 1GB in bytes

# AWS S3 Configuration (Optional)
USE_S3=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=lokr-file-storage

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@lokr.com
FROM_NAME=Lokr File Vault

# Rate Limiting & Quotas
DEFAULT_RATE_LIMIT=2  # requests per second per user
DEFAULT_STORAGE_QUOTA=10485760  # 10MB in bytes

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080
REACT_APP_GRAPHQL_ENDPOINT=http://localhost:8080/graphql

# Docker Configuration
POSTGRES_DB=lokr
POSTGRES_USER=lokr_user
POSTGRES_PASSWORD=lokr_password
POSTGRES_PORT=5432
REDIS_PORT=6379
API_PORT=8080
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# Environment
NODE_ENV=development
GO_ENV=development
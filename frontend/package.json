    "@react-pdf-viewer/default-layout": "^3.12.0",
    "@tanstack/react-query": "^4.35.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "d3": "^7.8.5",
    "date-fns": "^2.30.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^10.16.4",
    "graphql": "^16.8.1",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.284.0",
    "react": "^18.2.0",
